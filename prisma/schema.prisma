// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(cuid())
  email     String   @unique
  password  String
  name      String?
  role      String   @default("admin")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model DealershipApplication {
  id              String   @id @default(cuid())
  fullName        String
  email           String
  phone           String
  companyName     String
  province        String
  district        String
  address         String
  currentBusiness String?
  monthlyCapacity String
  references      String?
  additionalInfo  String?
  status          String   @default("pending") // pending, reviewed, approved, rejected
  notes           String?  // Admin notlar覺
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model ContactForm {
  id        String   @id @default(cuid())
  fullName  String
  email     String
  phone     String
  subject   String
  message   String
  status    String   @default("unread") // unread, read, responded
  notes     String?  // Admin notlar覺
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Complaint {
  id           String   @id @default(cuid())
  fullName     String
  email        String
  phone        String
  orderNumber  String?
  productName  String
  complaintType String
  description  String
  status       String   @default("pending") // pending, investigating, resolved, closed
  notes        String?  // Admin notlar覺
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}

model Question {
  id        String   @id @default(cuid())
  fullName  String
  email     String
  phone     String?
  category  String
  question  String
  answer    String?  // Admin cevab覺
  status    String   @default("waiting") // waiting, answered
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}